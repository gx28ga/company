{% macro list(item) %}
<a class="box" id="{{item.id}}" href="/billDetail/pjDetal_html_{{item.id}}.html">
    {% if item.isHot == 1 %}
    <div class="tag-type">
        <i class="hot" title="热销"></i>
    </div>
    {% endif %}
    <div class="leftside">
        <div class="content">
            <ul>
                <li class="title">
                    <!--{# % if item.type == 2 or item.type == 3 or item.type == 5 % #}-->
                    <!--<div class="tag">-->
                        <!--{% if item.type == 2 or item.type == 3 %}-->
                        <!--<span>票据</span>-->
                        <!--{% endif %}-->
                        <!--{% if item.type == 5 %}-->
                        <!--<span class="blue">保理</span>-->
                        <!--{% endif %}-->
                    <!--</div>-->
                    <!--{# % endif % #}-->
                    <h2>{{item.fullName}}</h2>
                </li>
                <li class="rate">
                    <span>
                        <b>{{item.rate}}</b>%{% if item.activityRate>0 %}+<b style="font-size: 32px">{{item.activityRate}}</b>%{% endif %}
                    </span>
                    <p>历史年化收益率</p>
                </li>
                <li class="term">
                    <span><b>{{item.deadline}}</b>天</span>
                    <p>产品期限</p>
                </li>
                <li class="investment">
                    <span><b>{{item.leastaAmount | toLocaleString}}</b>元</span>
                    <p>起投金额</p>
                </li>
                <li class="acount">
                    <span><b>{{item.amount | toLocaleString}}</b>元</span>
                    <p>产品总额</p>
                </li>
            </ul>
        </div>
    </div>
    <div class="rightside">
        <div class="tags">
            {% import "../../common/couponTag.njk" as forms %}
            {{ forms.coupon(item) }}
        </div>
        <div class="about">
            <div class="progress">
                <div class="percent">
                    <div class="num" style="width:{{item.pert}}%"></div>
                </div>
                <div class="text">{{item.pert | init}}%</div>
            </div>
            <div class="aside">
                <div class="btn">{{(item.status | setButtonName).cnvalue}}</div>
            </div>
        </div>
    </div>
</a>
{% endmacro %}