{% macro name(name) %}
<a class="box gray" v-for="item in {{name}}" :href="'/billDetail/pjDetal_html_'+item.id+'.html'">
    <div class="ProductStatus">
        <product-status :item="item"></product-status>
    </div>
    <div class="leftside">
        <div class="content">
            <ul>
                <li class="title">
                    <!--<div class="tag" v-if="item.type == 2 || item.type == 3 || item.type == 5">-->
                        <!--<span v-if="item.type == 2 || item.type == 3">票据</span>-->
                        <!--<span v-if="item.type == 5">保理</span>-->
                    <!--</div>-->
                    <h2>${item.fullName}</h2>
                    <div class="about" v-if="item.accept && item.accept != ''">
                        <i class="jian"></i>
                        ${item.accept}
                    </div>
                </li>
                <li class="rate">
                    <span>
                        <b>${item.rate}</b>%{% if item.activityRate>0 %}+<b style="font-size: 32px">${item.activityRate}</b>%{% endif %}
                    </span>
                    <p>历史年化收益率</p>
                </li>
                <li class="term">
                    <span><b>${item.deadline}</b>天</span>
                    <p>产品期限</p>
                </li>
                <li class="investment">
                    <span><b>${item.leastaAmount | toLocaleString}</b>元</span>
                    <p>起投金额</p>
                </li>
                <li class="acount">
                    <span><b>${item.amount | toLocaleString}</b>元</span>
                    <p>产品总额</p>
                </li>
            </ul>
        </div>
    </div>
    <div class="rightside">
        <div class="aside">
            <div class="btn">查看详情</div>
        </div>
    </div>
</a>
{% endmacro %}