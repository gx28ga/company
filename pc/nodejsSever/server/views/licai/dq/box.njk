{% macro list(item) %}
<a class="box" id="{{item.id}}" href="/billDetail/billDetal_html_{{item.id}}.html">
    {% if item.isHot == 1 %}
    <div class="tag-type">
        <i class="hot" title="热销"></i>
    </div>
    {% endif %}
    <div class="leftside">
        <div class="title">
            <div class="tags">
                {% import "../../common/couponTag.njk" as forms %}
                {{ forms.coupon(item) }}
            </div>

            <!--<div class="tag">-->
                <!--{% if item.type == 6 %}-->
                <!--<span>资管</span>-->
                <!--{% endif %}-->
                <!--{% if item.type == 7 %}-->
                <!--<span>金交所</span>-->
                <!--{% endif %}-->
            <!--</div>-->
            <h2>{{item.fullName}}</h2>
        </div>
        <div class="content">
            <ul>
                <li class="rate">
                    <span>
                        <b>{{item.rate}}</b>%
                        {% if item.activityRate>0 %}
                        +<b>{{item.activityRate}}</b>%
                        {% endif %}
                    </span>
                    <p>历史年化收益率</p>
                </li>
                <li class="term">
                    <span><b>{{item.deadline}}</b>天</span>
                    <p>产品期限</p>
                </li>
                <li class="acount">
                    <span><b>{{item.amount}}</b>元</span>
                    <p>产品总额</p>
                </li>
            </ul>
        </div>
    </div>
    <div class="rightside">
        <div class="progress">
            <div class="text">
                <span>{{item.pert|init}}%</span>
                <h6>募集进度</h6>
            </div>
            <div class="percent">
                <div class="num" style="width:{{item.pert}}%"></div>
            </div>
        </div>
        <div class="line"></div>
        <div class="aside">
            <div class="btn">{{(item.status | setButtonName).cnvalue}}</div>
            <div class="money">
                <h6>可投金额</h6>
                <span>{{item.surplusAmount}}</span>
            </div>
        </div>
    </div>
    {% if item.accept != undefined and item.accept != '' %}
    <div class="footer"><i></i>产品管理人：{{item.accept}}</div>
    {% endif %}
</a>
{% endmacro %}