<script type="text/javascript">
    var index = 0;
    function onNav(offset) {
        var idx = index + offset;
        if (idx >= 5) {
            idx = 0;
        } else if (idx < 0) {
            idx = 5 - 1;
        }
        index = idx;
        var els = document.getElementsByClassName("program");
        for (var i = 0; i < 5; i++) {
            els[i].className = els[i].className.replace(" show", "");
        }
        var tgt = document.getElementsByClassName("program d" + index)[0];
        tgt.className += " show";
    }
</script>
